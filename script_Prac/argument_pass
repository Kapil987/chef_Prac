# Run as ./argument value

#!/bin/bash
echo "Running Script $0" #$0 stores the script name
VALUE=$1 # this is agument 1
if [ ! "$VALUE" ]; then
echo "Please enter argument/value"
exit
fi
echo "the entered value is: $VALUE"


